{
  "name": "relay-race-layout",
  "version": "0.0.0",
  "description": "",
  "keywords": [
    "",
    "nodecg-bundle"
  ],
  "homepage": "",
  "repository": "https://github.com/cma2819/relay-race-layout.git",
  "license": "MIT",
  "author": {
    "name": "cma",
    "email": "chicchaima@gmail.com",
    "url": ""
  },
  "files": [
    "dashboard",
    "graphics",
    "extension.js",
    "extension"
  ],
  "scripts": {
    "build": "run-s build:dashboard build:graphics build:extension",
    "build:dashboard": "parcel build src/browser/dashboard/*.html --out-dir dashboard --public-url ./",
    "build:extension": "parcel build src/extension/index.ts --target node --out-dir extension --public-url ./",
    "build:graphics": "parcel build src/browser/graphics/*.html --out-dir graphics --public-url ./",
    "clean": "del-cli bundle-analyzer dashboard extension graphics .cache",
    "format": "prettier --write \"**/*.{ts,json,html,css,md}\" && sort-package-json",
    "generate-riot-ts:dashboard": "generate-riot-ts ./src/browser/dashboard/components",
    "generate-riot-ts:graphics": "generate-riot-ts ./src/browser/graphics/components",
    "generate-schema-ts:config": "tsc script/generateConfigSchemaTs.ts && node script/generateConfigSchemaTs.js",
    "generate-schema-ts:schemas": "tsc script/generateSchemaTs.ts && node script/generateSchemaTs.js ./schemas ./src/nodecg/generated",
    "postinstall": "run-p postinstall:include-nodecg generate-schema-ts:schemas generate-schema-ts:config",
    "postinstall:include-nodecg": "include-nodecg postinstall",
    "start": "include-nodecg start",
    "typecheck": "tsc -b src/browser src/extension",
    "watch:dashboard": "parcel watch src/browser/dashboard/*.html --out-dir dashboard --public-url ./",
    "watch:extension": "parcel watch src/browser/graphics/*.html --out-dir graphics --public-url ./",
    "watch:graphics": "parcel watch src/browser/graphics/*.html --out-dir graphics --public-url ./"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s typecheck clean format && git add ."
    }
  },
  "dependencies": {
    "animate.css": "^3.7.2",
    "bulma": "^0.7.5",
    "bulma-extensions": "^6.2.7",
    "eslint": "^6.5.0",
    "include-nodecg": "0.0.1-6",
    "livesplit-core": "^0.10.2",
    "milliseconds": "^1.0.3",
    "nodecg": "^1.4.1",
    "parse-ms": "^2.1.0",
    "prettier": "^1.18.2",
    "riot": "^4.6.2"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.11.2",
    "@riotjs/compiler": "^4.4.3",
    "@riotjs/hot-reload": "^4.0.0",
    "@riotjs/parcel-plugin-riot": "^4.0.1",
    "@types/milliseconds": "0.0.29",
    "@types/node": "^12.11.2",
    "@types/parse-ms": "^2.1.2",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "del-cli": "^3.0.0",
    "eslint-config-riot": "^3.0.0",
    "generate-riot-ts": "^0.9.2",
    "husky": "^3.0.8",
    "json-schema-to-typescript": "^7.1.0",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "sass": "^1.23.0",
    "sort-package-json": "^1.22.1",
    "strip-indent": "^3.0.0",
    "ts-nodecg": "^0.3.0",
    "typescript": "^3.6.2"
  },
  "nodecg": {
    "assetCategories": [
      {
        "name": "initial-data",
        "title": "イベント初期データ",
        "allowedTypes": [
          "json"
        ]
      },
      {
        "name": "logo",
        "title": "イベントロゴ",
        "allowedTypes": [
          "jpg",
          "jpeg",
          "png",
          "gif"
        ]
      }
    ],
    "compatibleRange": "^1.1.1",
    "dashboardPanels": [
      {
        "name": "config",
        "title": "Config - 設定",
        "file": "config.html",
        "fullbleed": true,
        "headerColor": "#bcbcff"
      },
      {
        "name": "progress",
        "title": "Progress - 途中経過",
        "file": "progress.html",
        "fullbleed": true,
        "headerColor": "#bcbcff"
      }
    ],
    "graphics": [
      {
        "file": "team3-4.html",
        "width": 1280,
        "height": 800
      },
      {
        "file": "omnibar.html",
        "width": 1280,
        "height": 72
      },
      {
        "file": "checkpoint.html",
        "width": 220,
        "height": 650
      }
    ],
    "mount": [
      {
        "directory": "statics",
        "endpoint": "statics"
      }
    ]
  }
}
