{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "playerInfoStatus": {
      "enum": ["name", "twitter", "nico", "twitch"],
      "default": "name"
    },
    "soundEnableIndex": {
      "type": "number"
    },
    "logoUrl": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "checkpointIndex": {
      "type": "number",
      "minimum": 0
    }
  },
  "required": [
    "playerInfoStatus",
    "soundEnableIndex",
    "logoUrl",
    "checkpointIndex"
  ]
}
